<odoo>
		<record id='estate_property_tree' model='ir.ui.view'>
				<field name='name'>estate.property.list</field>
				<field name='model'>estate_property</field>
				<field name='arch' type='xml'>
						<tree string='Estate'>
								<field name='name'/>
								<field name='date_availability'/>
								<field name='postcode'/>
								<field name='expected_price'/>
								<field name='bedrooms'/>
								<field name='facades'/>
								<field name='garden'/>
								<field name='garden_orientation'/>
								<field name='state'/>
								<field name='active'/>
								<field name='tags_ids'/>
						</tree>
				</field>
		</record>
		<record id='estate_property_form' model='ir.ui.view'>
				<field name='name'>estate.property.form</field>
				<field name='model'>estate_property</field>
				<field name='arch' type='xml'>
						<form string='Estate'>
              <header>
                <button name='action_change_status_sold' type='object' string='SOLD'/>
                <button name='action_change_status_canceled' type='object' string='CANCELED'/>
              </header>
								<sheet>
												<h1><field name='name'></field></h1>
										<field name='tags_ids' widget='many2many_tags'/>
										<group>

										</group>
										<group>
												<group>
														<field name='property_type_id'/>
														<field name='postcode'/>
														<field name='date_availability'/>
                            <field name='state'/>
												</group>
												<group>
														<field name='expected_price'/>
														<field name='selling_price'/>
														<field name='best_offer'/>
														<field name='active'/>
												</group>
												<notebook>
														<page string='Description'>
																<group>
																  	<field name='description'/>
																  	<field name='bedrooms'/>
																  	<field name='living_area'/>
																  	<field name='facades'/>
																  	<field name='garage'/>
														  	  	<field name='garden'/>
																  	<field name='garden_area'/>
														  	  	<field name='garden_orientation'/>
																</group>
														</page>
														<page string='Offers'>
																<field name='offer_ids'>
																		<tree string='Offers'>
																				<field name='partner_id'/>
																				<field name='price'/>
																				<field name='validity'/>
																				<field name='date_deadline'/>
																				<field name='create_date'/>
                                        <button name='action_refuse' type='object' icon='fa-times'/>
                                        <button name='action_accepted' type='object' icon='fa-check'/>
																				<field name='status'/>
																		</tree>
																</field>
														</page>
														<page string='Other Info'>
																<group>
																		<field  name='saleman_id'/>
																		<field  name='buyer_id'/>
																</group>
														</page>
												</notebook>
										</group>
								</sheet>
						</form>
				</field>
		</record>

		<record id='estate_property_action' model='ir.actions.act_window'>
				<field name='name'>estate.property.action</field>
				<field name='res_model'>estate_property</field>
				<field name='view_mode'>tree,form</field>
		</record>

</odoo>

